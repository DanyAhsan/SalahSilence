<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for dark mode. -->
    <style name="Base.Theme.SalahSilence" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnPrimary">@color/black</item> 
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorError">@android:color/holo_red_dark</item>
        <item name="colorOnError">@color/black</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    
    <!-- Custom Popup Menu Theme for Dark Mode -->
    <style name="ThemeOverlay.App.PopupMenu" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/surface</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/outfitregular</item> 
    </style>
</resources>