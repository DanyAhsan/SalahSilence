<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SalahSilence" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorError">@android:color/holo_red_light</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item> 
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SalahSilence" parent="Base.Theme.SalahSilence" />
    
    <!-- Custom Popup Menu Theme -->
    <style name="ThemeOverlay.App.PopupMenu" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/surface</item> <!-- Set the entire popup window background -->
        <item name="android:textColor">@color/text_primary</item> <!-- Use android:textColor for items -->
        <item name="android:fontFamily">@font/outfitregular</item> 
        <!-- Potentially remove android:background if the parent handles it -->
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.SalahSilence.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.SalahSilence</item>
    </style>
</resources>
